<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration">


    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration form"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_red_dark"
        tools:textAlignment="center"
        tools:textSize="40sp" />


    <TextView
        android:id="@+id/first_name"
        android:layout_width="150dp"
        android:layout_height="40dp"

        android:layout_centerInParent="false"

        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/heading"
        android:text="First name"
        android:textAlignment="textStart"

        tools:textColor="@android:color/black"
        tools:textSize="20sp" />

    <EditText
        android:id="@+id/first_name1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/heading"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/first_name" />


    <TextView
        android:id="@+id/last_name"
        android:layout_width="150dp"
        android:layout_height="40dp"

        android:layout_below="@+id/first_name"

        android:layout_centerInParent="false"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:text="Last name"
        android:textAlignment="textStart"

        tools:textColor="@android:color/black"
        tools:textSize="20sp" />

    <EditText
        android:id="@+id/last_name1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/first_name1"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/last_name" />

    <TextView
        android:id="@+id/address"
        android:layout_width="150dp"
        android:layout_height="40dp"

        android:layout_below="@+id/last_name"

        android:layout_centerInParent="false"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:text="Address"
        android:textAlignment="textStart"

        tools:textColor="@android:color/black"
        tools:textSize="20sp" />

    <EditText
        android:id="@+id/address1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/last_name1"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/address" />

    <TextView
        android:id="@+id/contact"
        android:layout_width="150dp"
        android:layout_height="40dp"

        android:layout_below="@+id/address"

        android:layout_centerInParent="false"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:text="Contact number"
        android:textAlignment="textStart"

        tools:textColor="@android:color/black"
        tools:textSize="20sp" />

    <EditText
        android:id="@+id/contact1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/address1"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:layout_toRightOf="@+id/contact" />


    <TextView
        android:id="@+id/email"
        android:layout_width="150dp"
        android:layout_height="40dp"

        android:layout_below="@+id/contact"

        android:layout_centerInParent="false"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:text="Email id"
        android:textAlignment="textStart"

        tools:textColor="@android:color/black"
        tools:textSize="20sp" />

    <EditText
        android:id="@+id/email1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/contact1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/email" />

    <Button
        android:id="@+id/register1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/email1"

        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:text="Register"
        android:textStyle="bold"
        tools:textColor="@android:color/black" />

</RelativeLayout>